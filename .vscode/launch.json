    "version": "0.2.0",
    "configurations": [

        {
            "name": "image tool - disk backup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/imgtool.py",
            "cwd": "/",
            "args": [
                "--dir",
                "/var/images/tvinfo"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "JB tool",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/jbtool.py",
            "args": [
                "--dir",
                "/var/images/tvinfo"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "SFTP install",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sftpmng.py",
            "args": [
                "install",
                "--file",
                "${workspaceFolder}/res/testuser.jsonc"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "SFTP UN install",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sftpmng.py",
            "args": [
                "uninstall",
                "--all"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "TEST py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal"
        }
    ]
}