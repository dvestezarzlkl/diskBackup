    "version": "0.2.0",
    "configurations": [

        {
            "name": "image tool - disk backup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/imgtool.py",
            "args": [
                "--dir",
                "/var/images/tvinfo"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "JB tool",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/jbtool.py",
            "args": [
                "--dir",
                "/var/images/tvinfo"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "SFTP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sftp.py",
            "args": [
                "install",
                "--file",
                "${workspaceFolder}/res/testuser.sftp"
            ],
            "console": "integratedTerminal"
        }
    ]
}